---
import BaseLayout from '@/layouts/BaseLayout.astro'
import siteConfig from '@/site-config'
const horario = [
  { etiqueta: 'Horario normal', horario: 'lunes a viernes: 8:00 am a 7:00 pm' },
  { etiqueta: 'Horario fin de semana', horarios: 'sabado: 8:00 am a 2:00 pm' },
  { etiqueta: 'Horario fin de semana', horarios: 'domingo: descanso' },
]
---

<BaseLayout description={siteConfig.description}>
  <section class="horario">
    <h2 class="titulo">Horarios</h2>
    <div class="grid">
      {
        horario.map((horario) => (
          <div class="card">
            <h3>{horario.etiqueta}</h3>
            <p>{horario.horario}</p>
            <p>{horario.horarios}</p>
          </div>
        ))
      }
    </div>
  </section>
</BaseLayout>

<style>
  .servicios {
    padding: 2rem;
    font-family: sans-serif;
    color: white;
  }

  .titulo {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 1.5rem;
    backdrop-filter: blur(4px);
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
  }

  .card {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 1rem;
    padding: 1.5rem;
    backdrop-filter: blur(10px);
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    color: #fff;
  }

  .card h3 {
    margin: 0 0 0.5rem;
  }

  .card p {
    color: #ddd;
  }
</style>

<br />

<style>
  .contactoCelular {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 2rem;
  }

  .tarjetaCelular {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 1rem;
    padding: 1rem 1.5rem;
    backdrop-filter: blur(10px);
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #fff;
  }

  .etiqueta {
    font-weight: bold;
    margin-right: 0.5rem;
  }

  .numero {
    font-size: 1.1rem;
  }
</style>

<style>
  .horario {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 2rem;
  }
</style>
