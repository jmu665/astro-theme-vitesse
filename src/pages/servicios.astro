---
import BaseLayout from '@/layouts/BaseLayout.astro'
import siteConfig from '@/site-config'

const servicios = [
  { nombre: 'Cambio de aceite', descripcion: 'Incluye filtro y revisión de niveles.' },
  { nombre: 'Alineación y balanceo', descripcion: 'Mejora el desgaste de tus llantas.' },
  { nombre: 'Frenos y Clutch', descripcion: 'Revisión y cambio de pastillas o balatas.' },
  { nombre: 'Escaneo Computarizado', descripcion: 'Diagnóstico electrónico completo.' },
  { nombre: 'Suspensión', descripcion: 'Cambio de amortiguadores y revisión general.' },
  {
    nombre: 'Reparaciones a motor',
    descripcion:
      'Realizamos diagnóstico y reparación de fallas en el motor, desde problemas menores hasta reconstrucciones completas.',
  },
]
const contactoCelular = [
  { etiqueta: 'Celular 1', numero: '687-115-3804' },
  { etiqueta: 'Celular 2', numero: '667-100-2020' },
]
---

<BaseLayout description={siteConfig.description}>
  <section class="servicios">
    <h2 class="titulo">Servicios Automotrices</h2>
    <div class="grid">
      {
        servicios.map((servicio) => (
          <div class="card">
            <h3>{servicio.nombre}</h3>
            <p>{servicio.descripcion}</p>
          </div>
        ))
      }
    </div>
  </section>

  <style>
    .servicios {
      padding: 2rem;
      font-family: sans-serif;
      color: white;
    }

    .titulo {
      text-align: center;
      font-size: 2rem;
      margin-bottom: 1.5rem;
      backdrop-filter: blur(4px);
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1rem;
    }

    .card {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 1rem;
      padding: 1.5rem;
      backdrop-filter: blur(10px);
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
      color: #fff;
    }

    .card h3 {
      margin: 0 0 0.5rem;
    }

    .card p {
      color: #ddd;
    }
  </style>

  <br />

  <style>
    .contactoCelular {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      padding: 2rem;
    }

    .tarjetaCelular {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 1rem;
      padding: 1rem 1.5rem;
      backdrop-filter: blur(10px);
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
      display: flex;
      align-items: center;
      justify-content: space-between;
      color: #fff;
    }

    .etiqueta {
      font-weight: bold;
      margin-right: 0.5rem;
    }

    .numero {
      font-size: 1.1rem;
    }
  </style>

  <section class="contactoCelular">
    {
      contactoCelular.map((contacto) => (
        <div class="tarjetaCelular">
          <span class="etiqueta">{contacto.etiqueta}:</span>
          <span class="numero">{contacto.numero}</span>
        </div>
      ))
    }
  </section>

  <style>
    .contactoCelular {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      padding: 2rem;
    }
  </style>
</BaseLayout>
